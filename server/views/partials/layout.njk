{% extends "govuk/template.njk" %}

{% block head %}
  <link href="/assets/stylesheets/application.css?{{ version }}" rel="stylesheet"/>
{% endblock %}

{% block pageTitle %}{{pageTitle | default(applicationName)}}
{% endblock %}

{% block header %}
  {% include "./header.njk" %}
{% endblock %}

{% block bodyStart %}{% endblock %}

{% block beforeContent %}
  <aside role="complementary">
    {% include "./phasebanner.njk" %}
    {% block aside %}{% endblock %}
  </aside>
  <span class="govuk-visually-hidden" id="{{ pageId }}"></span>
{% endblock %}

{% block footer %}
  {{ govukFooter({
    meta: {
      items: [
        {
          href: "/cookies",
          text: "Cookies",
          attributes: {'data-qa': 'cookies-link'}
        },
        {
          href: "https://www.gov.uk/help/privacy-notice",
          text: "Privacy policy",
          attributes: {'data-qa': 'privacy-policy-link', 'target': '_blank'}
        }
      ]
    }
  }) }}
{% endblock %}

{% block bodyEnd %}
  <script type="module" src="/assets/govukFrontendInit.js"></script>
  <script src="/assets/moj/all.js"></script>
  <script src="/assets/mojFrontendInit.js"></script>
  <script src="/assets/govukCookies.js"></script>
{% endblock %}
