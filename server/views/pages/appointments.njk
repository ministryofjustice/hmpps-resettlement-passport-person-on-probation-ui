{% extends "../partials/layout.njk" %}

{% block content %}

  {% set activePage = 'appointments' %}
  {% include "../partials/subnavigation.njk" %}

  <div class="govuk-grid-row govuk-!-padding-bottom-8">
    <div class="govuk-grid-column-full">
      <h1 class="govuk-heading-xl">Appointments</h1>
      <p>Tell your offender manager if you have a problem attending any appointment as soon as you can.</p>
      <p>If you miss an appointment without a good reason it could break your licence conditions.</p>
    </div>
  </div>

  <div class="govuk-grid-row govuk-!-padding-bottom-8">
    <div class="govuk-grid-column-full govuk-!-margin-bottom-4">
      <h2 class="govuk-heading-m ">Your appointments</h2>
    </div>

    <!-- Next appointments Begin -->

    {% if appointments | length < 1 %}
      <div class="govuk-grid-column-full" data-qa="appointment-empty-box">
        <p>Currently you have no future appointments</p>
      </div>
    {% endif %}
    {% for item in appointments %}
      <div class="govuk-grid-column-full" data-qa="appointment-box">
        <div class="govuk-grid-row govuk-!-margin-bottom-4">
          <div class="govuk-grid-column-full">
            <section class="govuk-!-margin-bottom-4">
              <header>
                <h3 class="govuk-heading-m govuk-!-margin-bottom-0">{{item.date | formatDate}}
                </h3>
              </header>
              <div class="govuk-grid-row appsubpanel govuk-!-margin-bottom-4 govuk-!-margin-left-2">
                <div class="govuk-grid-column-two-thirds govuk-!-margin-top-4">
                  <span class="govuk-body-s">{{item.time | formatTime }}</span>
                  <p >
                    <b>{{item.title}}</b><br>
                    <span class="govuk-body-s">
                      {% if item.location | formatAppointmentLocation %}
                        {{ item.location | formatAppointmentLocation }}
                      {% else %}
                  No location available
                  {% endif %}
                    </span>
                  </p>
                  <p class="govuk-body-s">
                    <a href="#">View details</a>
                  </p>
                  <hr class="govuk-section-break govuk-section-break--visible govuk-!-padding-top-4">
                </div>
              </div>
            </section>
          </div>
        </div>
      </div>
    {% endfor %}
    <!-- Next appointments End -->

    <!-- Older appointments Begin -->
    <div class="govuk-grid-column-full govuk-!-padding-top-8">
      <details class="govuk-details" data-module="govuk-details">
        <summary class="govuk-details__summary">
          <span class="govuk-details__summary-text" data-qa="view-older-appointments" >View older appointments</span>
        </summary>

        {% for oldItem in oldAppointments %}
          <div class="govuk-details__text">
            <h2 class="govuk-heading-m">{{oldItem.date | formatDate }}</h2>
            <div class="govuk-grid-row appsubpanel govuk-!-margin-bottom-2">
              <div class="govuk-grid-column-full">
                <span class="govuk-body-m">{{oldItem.time | formatTime }}</span>
                <p>
                  <b>{{oldItem.title}}</b><br>
                  {% if oldItem.location | formatAppointmentLocation %}
                    <span class="govuk-body-s">
                      {{ oldItem.location | formatAppointmentLocation }}</span>
                  {% else %}
                    <span class="govuk-body-s">No location available</span>
                  {% endif %}
                </p>
              </div>
            </div>
            <hr class="govuk-section-break govuk-section-break--visible govuk-!-margin-top-0 ">
          </div>
        {% endfor %}

      </details>
    </div>
    <!-- Older appointments End -->
  </div>

{% endblock %}