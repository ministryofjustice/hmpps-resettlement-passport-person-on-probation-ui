{% extends "../partials/layout.njk" %}
{% import "../partials/appointmentMacro.njk" as appointmentMacro %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}

{% block content %}

  {% set activePage = 'appointments' %}
  {% include "../partials/subnavigation.njk" %}

  <div class="govuk-grid-row govuk-!-padding-bottom-8">
    <div class="govuk-grid-column-full">
      <h1 class="govuk-heading-xl" data-qa="appointments-page-title">{{ t('appointments-h1') }}</h1>
        {{ govukWarningText({
                text: t('appointments-warning-text'),
                iconFallbackText: "Warning"
         }) }}
      <p>{{ t('appointments-paragraph-1') }}</p>
    </div>
  </div>

  <div class="govuk-grid-row govuk-!-padding-bottom-8">
    <div class="govuk-grid-column-full">
      <h2 class="govuk-heading-m">{{ t('appointments-subheading') }}</h2>
    </div>

    <!-- Next appointments Begin -->

    {% if appointments | length < 1 %}
      <div class="govuk-grid-column-full" data-qa="appointment-empty-box">
        <p>{{ t('appointments-no-appointments-text') }}</p>
      </div>
    {% endif %}
    {% for item in appointments %}
      {{ appointmentMacro.render(item, loop.index, false, true, lang) }}
    {% endfor %}
    <!-- Next appointments End -->

    <!-- Older appointments Begin -->
    {% if oldAppointments | length > 0 %}
      <div class="govuk-grid-column-full govuk-!-padding-top-8">
        <details class="govuk-details" data-module="govuk-details">
          <summary class="govuk-details__summary">
            <span class="govuk-details__summary-text" data-qa="view-older-appointments" >{{ t('appointments-view-older-appointments-text') }}</span>
          </summary>

          {% for oldItem in oldAppointments %}
            <div class="govuk-details__text">
              <section class="app-summary-card govuk-!-margin-bottom-4">

                <header class="app-summary-card__header">
                  <h3 class="govuk-heading-m app-summary-card__title govuk-!-margin-bottom-0" data-qa="{{loop.index}}-old-appointment-date">{{oldItem.date | formatDate(lang)}}</h3>
                </header>
                <div class="app-summary-card__body govuk-!-padding-4">
                  <span data-qa="{{loop.index}}-old-appointment-duration"  class="govuk-body-m">{{oldItem.time | formatTime(0, queryParams.lang) }}
                  {% if appointment.duration %}
                    - {{ appointment.time | formatTime(appointment.duration, queryParams.lang) }}
                  {% endif %}
                  </span>
                  <p>
                    <b data-qa="{{loop.index}}-old-appointment-title">{{oldItem.title}}</b><br>
                    {% if oldItem.location | formatAppointmentLocation %}
                      <span class="govuk-body-s" data-qa="{{loop.index}}-old-appointment-location">
                        {{ oldItem.location | formatAppointmentLocation }}</span>
                    {% else %}
                      <span class="govuk-body-s" data-qa="{{loop.index}}-old-appointment-no-location">{{ t('appointments-no-location-text') }}</span>
                    {% endif %}
                  </p>
                </div>
              </section>
            </div>
          {% endfor %}

        </details>
      </div>
    {% endif %}
    <!-- Older appointments End -->
  </div>

{% endblock %}
