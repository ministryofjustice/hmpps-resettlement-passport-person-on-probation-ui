{% extends "../partials/layout.njk" %}
{% block content %}

  <div class="govuk-grid-row govuk-!-padding-bottom-4 govuk-!-padding-top-8">
    <div class="govuk-grid-column-full">

      <h1 class="govuk-heading-xl">
        {{applicationName}}
      </h1>

      <p class="govuk-body">
        Sign into your {{applicationName}} account to:
      </p>

      <ul class="govuk-list govuk-list--bullet govuk-!-padding-bottom-4">
        <li>View your past and future appointments</li>
        <li>View the appointment details</li>
        <li>View your license conditions</li>
      </ul>
      
      <p>
        <a class="govuk-button govuk-button--start" role="button" data-module="govuk-button" href="/dashboard">
          <span>
            Start
          </span>
          <svg class="govuk-button__start-icon govuk-!-display-none-print" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" focusable="false" aria-hidden="true">
            <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
          </svg>
        </a>
      </p>

    </div>
  </div>

{% endblock %}