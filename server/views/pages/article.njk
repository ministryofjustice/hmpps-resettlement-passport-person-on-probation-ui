{% extends "../partials/layout.njk" %}

{% set pageTitle = "Resettle after prison" + titleHeading %}

{% block content %}

    <div class="govuk-grid-row govuk-!-padding-bottom-4 govuk-!-margin-top-8">

        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">Resettle after prison</h1>

            <aside class="part-navigation-container" role="complementary">
                <nav aria-label="Pages in this guide" class="gem-c-contents-list" role="navigation">
                    <h2 class="gem-c-contents-list__title">
            Contents
        </h2>
                    <ol class="gem-c-contents-list__list">
                        {% for item in navList %}
                            <li class="gem-c-contents-list__list-item gem-c-contents-list__list-item--dashed <% 'gem-c-contents-list__list-item--active' if (item.slug === pageId) else '' %>" aria-current="<% true if (item.slug === pageId) else false %>">
                                <span aria-hidden="true"></span>

                                {% if (item.slug === pageId) %}
                                    {{ item.title }}
                                {% else %}
                                    <a class="gem-c-contents-list__link govuk-link" href="{{item.slug}}">{{ item.title }}</a>
                                {% endif %}
                                </li>
                            {% endfor %}
                        </ol>
                    </nav>
                </aside>

            </div>
        </div>

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds govuk-!-padding-top-4">
                <h2 class="govuk-heading-l">
                    {{ page.title }}
                </h2>
                <div class="govuk-!-margin-bottom-6">
                    {{ page.bodyText | safe }}
                </div>
                <nav class="govuk-pagination govuk-pagination--block" aria-label="Pagination">

                    {% if (page.order > 1) %}
                    {% set prevOrder = page.order - 2 %}
                    <div class="govuk-pagination__prev">
                        <a class="govuk-link govuk-pagination__link" href="{{ navList[prevOrder].slug }}" rel="prev">

                            <svg class="govuk-pagination__icon govuk-pagination__icon--prev" xmlns="http://www.w3.org/2000/svg" height="13" width="15" aria-hidden="true" focusable="false" viewBox="0 0 15 13">
                                <path d="m6.5938-0.0078125-6.7266 6.7266 6.7441 6.4062 1.377-1.449-4.1856-3.9768h12.896v-2h-12.984l4.2931-4.293-1.414-1.414z"></path>
                            </svg>

                            <span class="govuk-pagination__link-title">
                        Previous<span class="govuk-visually-hidden"> page</span>
                            </span>

                            <span class="govuk-visually-hidden">:</span>
                            <span class="govuk-pagination__link-label">{{ navList[prevOrder].title }}</span>

                        </a>
                    </div>
                    {% endif %}

                    {% if (page.order < numPages) %}
                    <div class="govuk-pagination__next">
                        <a class="govuk-link govuk-pagination__link" href="{{ navList[page.order].slug }}" rel="next">

                            <svg class="govuk-pagination__icon govuk-pagination__icon--next" xmlns="http://www.w3.org/2000/svg" height="13" width="15" aria-hidden="true" focusable="false" viewBox="0 0 15 13">
                                <path d="m8.107-0.0078125-1.4136 1.414 4.2926 4.293h-12.986v2h12.896l-4.1855 3.9766 1.377 1.4492 6.7441-6.4062-6.7246-6.7266z"></path>
                            </svg>

                            <span class="govuk-pagination__link-title">
        Next<span class="govuk-visually-hidden"> page</span>
                            </span>

                            <span class="govuk-visually-hidden">:</span>
                            <span class="govuk-pagination__link-label">{{ navList[page.order].title }}</span>

                        </a>
                    </div>
                    {% endif %}

                </nav>

            </div>
            <div class="govuk-grid-column-one-third">
                <div class="gem-c-contextual-sidebar">

                    <div class="gem-c-related-navigation">
                        <br>
                        <aside class="govuk-prototype-kit-common-templates-related-items" role="complementary">
                            <h3 class="govuk-heading-s" id="subsection-title">
                        Related content
                    </h3>
                            <nav role="navigation" aria-labelledby="subsection-title">
                                <ul class="govuk-list govuk-!-font-size-16">

                                    {% for relatedLink in page.relatedContent %}
                                        <li>
                                            <a href="{{relatedLink.link}}">
                                                {{relatedLink.text}}
                                            </a>
                                        {% endfor %}
                                </ul>
                            </nav>
                        </aside>
                        <aside class="govuk-prototype-kit-common-templates-related-items" role="complementary">
                            <h3 class="govuk-heading-s" id="subsection-title">
                        Help and advice
                    </h3>
                            <nav role="navigation" aria-labelledby="subsection-title">
                                <ul class="govuk-list govuk-!-font-size-16">
                                    {% for helpLink in page.helpAndAdvice %}
                                        <li>
                                            <a href="{{helpLink.link}}">
                                                {{helpLink.text}}
                                            </a>
                                        {% endfor %}
                                </ul>
                            </nav>
                        </aside>
                    </div>
                </div>
            </div>
        </div>

    {% endblock %}