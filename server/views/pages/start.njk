{% extends "../partials/layout.njk" %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}

{% block content %}

  {% set pageTitle = "Start" + titleHeading %}

  {% set queryParams = queryParams %}
  <div class="govuk-grid-row govuk-!-padding-bottom-4 govuk-!-padding-top-8">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl" data-qa="start-page-title">
        {{ t('home-h1') }}
      </h1>

      <p class="govuk-body">{{ t('home-p-1') }}</p>

      <p>
        <a class="govuk-button govuk-button--start govuk-!-margin-top-4" role="button" data-module="govuk-button" href="/overview" track-tag-id="serviceStartBtn">
          <span data-qa="start-btn">
            {{ t('home-btn-1') }}
          </span>
          <svg class="govuk-button__start-icon govuk-!-display-none-print" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" focusable="false" aria-hidden="true">
            <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
          </svg>
        </a>
      </p>

      <h2 class="govuk-heading-m">
        {{ t('home-h2-1') }}
      </h2>

      <p class="govuk-body">
        {{ t('home-p-2') }}
      </p>
      <p class="govuk-body">
        {{ t('home-p-2-b') }}
      </p>

      <h2 class="govuk-heading-m">
        {{ t('home-h2-2') }}
      </h2>

      <p class="govuk-body">
        {{ t('home-p-3') }}
      </p>
      <p class="govuk-body">
        {{ t('home-p-3-b') }}
      </p>

      {{ govukWarningText({
                text: t('home-hint'),
                iconFallbackText: "Warning"
                }) }}


      <a href="#" track-tag-id="testBtn">Temp</a>
    </div>
  </div>

{% endblock %}