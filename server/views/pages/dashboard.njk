{%- from "moj/components/sub-navigation/macro.njk" import mojSubNavigation -%}
{% extends "../partials/layout.njk" %}

{% block content %}

  {{ mojSubNavigation({
    label: 'Sub navigation',
    items: [{
      text: 'Home',
      href: '/dashboard',
      active: true
    }, {
      text: 'Appointments',
      href: '#'
    }, {
      text: 'Licence conditions',
      href: '#'
    }, {
      text: 'Profile',
      href: '#'
    }, {
      text: 'Sign out',
      href: '/sign-out',
      attributes: {'data-qa': "signOut"}
    }]
  }) }}

  <div class="govuk-grid-row govuk-!-padding-bottom-4">
    <div class="govuk-grid-column-full">

      <p class="hmrc-caption govuk-caption-xl"><span class="govuk-visually-hidden">This section is </span>{{applicationName}}</p>

      <h1 class="govuk-heading-xl govuk-!-margin-bottom-2">
        {{personalData.personalDetails.firstName}}
        {{personalData.personalDetails.lastName}}</h1>

    </div>
  </div>

{% endblock %}